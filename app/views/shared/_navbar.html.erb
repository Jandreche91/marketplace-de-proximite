<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "logo.png" %>
  <% end %>
  <%= link_to "Our courgettes", courgettes_path, class:"navbar-link left-bar d-none d-sm-none d-md-block text-secondary" %>
  <%= link_to user_signed_in? ? "Log out" : "Log in", user_signed_in? ?  destroy_user_session_path : new_user_session_path, method: user_signed_in? ? :delete : :get %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    <!--   <li class="nav-item active">
        <%= link_to "Home", "#", class: "nav-link" %>
      </li> -->
      <li class="nav-item dropdown">
        <%= image_tag "avatar_pics/photo_#{user_signed_in? ? current_user.id : 0  }.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Create an account", "users/sign_in", class: "dropdown-item" %>
          <%= link_to "Login", "users/sign_in", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>


