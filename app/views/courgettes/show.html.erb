      <div class="card flex-grow-1" style="box-shadow: 0 0 15px rgba(0,0,0,0.2);">
        <h5 class="card-header">Description and price</h5>
        <div class="card-body d-flex flex-column justify-content-around">
          <h4 class="card-title"><%= @courgette.description %></h4>
          <h4 class="card-text">Pick your courgette at <%= @courgette.user.address%></h4>
          <h4 class="card-text"><strong>Only <%= @courgette.price %>â‚¬ a day</strong></h4>
        </div>
