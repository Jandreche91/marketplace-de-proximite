<div class="container" style="text-align: center;">
  <h2>Discover at our <%= Courgette.count %> amazing courgettes listed here!</h1>
</div>

<br>

<div class="container">

  <div class="row">
    <% @courgettes.each do |courgette| %>
      <div class="col-4">
        <%= link_to courgette_path(courgette), :action => 'go' do %>
        <div class="card-trip">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos">
            <div>
              <h2><%= courgette.name %></h2>
              <p><%= courgette.description.truncate_words(4) %></p>
            </div>
            <h2 class="card-trip-pricing"><%= courgette.price %>â‚¬/day</h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
        </div>
        <br><br>
      </div>
    <%end %>
    <% end %>
  </div>
</div>


<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
